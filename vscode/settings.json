{
    // Theme
    "workbench.colorTheme": "Catppuccin Frapp√©",
    "workbench.iconTheme": "catppuccin-frappe",
    "window.titleBarStyle": "custom",
    "catppuccin-icons.hidesExplorerArrows": false,
    "catppuccin-icons.specificFolders": true,
    "catppuccin-icons.monochrome": false,
    "catppuccin-icons.associations.languages": {
        "slang": "shader"
    },
    "catppuccin-icons.associations.extensions": {
        "spv": "shader"
    },
    // Editor Appearance
    "editor.unicodeHighlight.nonBasicASCII": false,
    "git.decorations.enabled": false,
    "editor.foldingHighlight": false,
    "editor.minimap.enabled": false,
    "window.zoomLevel": 1,
    "editor.rulers": [
        100
    ],
    // Text
    "editor.fontFamily": "Fira Code",
    "editor.fontLigatures": true,
    "terminal.integrated.fontLigatures.enabled": true,
    "terminal.integrated.cursorStyle": "line",
    "terminal.integrated.minimumContrastRatio": 1,
    "editor.bracketPairColorization.enabled": false,
    "editor.renderFinalNewline": "dimmed",
    // Editor Behaviour
    "update.showReleaseNotes": false,
    "editor.inlayHints.enabled": "off",
    "editor.find.cursorMoveOnType": false,
    "editor.formatOnSave": true,
    "explorer.copyRelativePathSeparator": "/",
    "editor.wordWrapColumn": 100,
    "editor.semanticHighlighting.enabled": true,
    "editor.linkedEditing": false,
    "workbench.editor.empty.hint": "hidden",
    "editor.accessibilitySupport": "off",
    // General VSCode
    "settingsSync.ignoredSettings": [
        "workbench.colorTheme",
        "editor.fontSize"
    ],
    "extensions.ignoreRecommendations": true,
    "telemetry.telemetryLevel": "crash",
    "telemetry.feedback.enabled": false,
    // Git
    "git.enableSmartCommit": true,
    "git.confirmSync": false,
    "github.gitProtocol": "ssh",
    "git.enableCommitSigning": true,
    // Rust
    "rust-analyzer.check.command": "clippy",
    "rust-analyzer.imports.granularity.enforce": true,
    "rust-analyzer.imports.preferNoStd": true,
    "rust-analyzer.cargo.features": "all",
    "evenBetterToml.formatter.trailingNewline": true,
    // Todo Tree
    "todo-tree.general.showActivityBarBadge": false,
    "todo-tree.tree.showCountsInTree": true,
    "todo-tree.highlights.useColourScheme": true,
    "todo-tree.highlights.backgroundColourScheme": [
        "#e5c890"
    ],
    "todo-tree.highlights.foregroundColourScheme": [
        "#4c4f69"
    ],
    // Markdown
    "markdown.preview.scrollEditorWithPreview": false,
    "markdown.preview.scrollPreviewWithEditor": false,
    // Harper
    "harper.dialect": "British",
    "harper.linters.SpelledNumbers": true,
    // TOML
    "evenBetterToml.formatter.allowedBlankLines": 1,
    "evenBetterToml.formatter.reorderKeys": true,
    "evenBetterToml.formatter.reorderArrays": true,
    "evenBetterToml.formatter.arrayTrailingComma": true,
    "evenBetterToml.formatter.columnWidth": 100,
    "evenBetterToml.formatter.arrayAutoExpand": true,
    "evenBetterToml.formatter.arrayAutoCollapse": true,
    // Formatters
    "[less][javascript][typescript][html][yaml][json][jsonc][css]": {
        "editor.defaultFormatter": "denoland.vscode-deno"
    },
    // Uncategorised
    "-----": "-----"
}
